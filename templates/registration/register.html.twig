{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">INSCRIPTION</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md-flex">
						<div class="img" style="background-image: url(https://picsum.photos/800);"></div>
						<div class="login-wrap p-4 p-md-5">
							<div class="d-flex">
								<div class="w-100">
									<h3 class="mb-4">Inscrivez vous</h3>
								</div>
								<div class="w-100">
									<p class="social-media d-flex justify-content-end">
										<a href="#" class="social-icon d-flex align-items-center justify-content-center">
											<span class="fa fa-facebook"></span>
										</a>
										<a href="#" class="social-icon d-flex align-items-center justify-content-center">
											<span class="fa fa-twitter"></span>
										</a>
									</p>
								</div>
							</div>
							{{ form_start(registrationForm) }}

							<div class="form-group mb-3">

								{{ form_row(registrationForm.firstName )}}
							</div>
							<div class="form-group mb-3">
								{{ form_row(registrationForm.lastName)}}

							</div>
							<div class="form-group mb-3">
								{{ form_row(registrationForm.email) }}

							</div>
							<div class="form-group mb-3">
								{{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
								{{ form_row(registrationForm.agreeTerms) }}

							</div>
							<div class="form-group">
								<button type="submit" class="form-control btn btn-primary rounded submit px-3">Envoyer</button>
							</div>

							{{ form_end(registrationForm) }}
							<p class="text-center">déjà menbre?
								<a data-toggle="tab" href="{{ path ('app_login')}}">Connectez vous</a>
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>


{% endblock %}
